{
  "name": "@goldwasserexchange/eslint-config-style",
  "version": "6.3.0",
  "description": "Goldwasser Exchange ES Lint code style config",
  "homepage": "https://github.com/goldwasserexchange/public",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/goldwasserexchange/public.git"
  },
  "license": "MIT",
  "author": "Hans Scheuren",
  "main": "index.js",
  "scripts": {
    "lint": "yarn lint:pkg && yarn lint:js",
    "lint:js": "eslint . --ignore-path .gitignore",
    "lint:pkg": "npmPkgJsonLint .",
    "precommit": "lint-staged",
    "sort": "sort-package-json"
  },
  "lint-staged": {
    "*.{js,ts}": [
      "yarn lint:js"
    ],
    "package.json": [
      "npmPkgJsonLint"
    ]
  },
  "eslintConfig": {
    "extends": "@goldwasserexchange"
  },
  "dependencies": {
    "@typescript-eslint/parser": "^5.12.1",
    "eslint-config-airbnb-base": "^15.0.0"
  },
  "devDependencies": {
    "@goldwasserexchange/npm-package-json-lint-config": "^6.3.0",
    "eslint": "^8.9.0",
    "lint-staged": "^10.5.4",
    "npm-package-json-lint": "^4.6.0",
    "sort-package-json": "^1.49.0"
  },
  "publishConfig": {
    "access": "public"
  },
  "npmpackagejsonlint": {
    "extends": "@goldwasserexchange/npm-package-json-lint-config"
  }
}
